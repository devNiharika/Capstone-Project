<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/library_card_radius"
    card_view:cardElevation="@dimen/library_card_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/library_row_padding"
            android:paddingRight="@dimen/library_row_padding"
            android:paddingTop="@dimen/library_row_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="16sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/library_row_padding"
            android:paddingRight="@dimen/library_row_padding"
            android:paddingTop="@dimen/library_row_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            tools:text="Content 1" />

        <TextView
            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/library_row_padding"
            android:paddingRight="@dimen/library_row_padding"
            android:paddingTop="@dimen/library_row_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="12sp"
            tools:text="Content 2" />

        <TextView
            android:id="@+id/content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/library_row_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12sp"
            tools:text="Content 3" />

    </LinearLayout>
</android.support.v7.widget.CardView>